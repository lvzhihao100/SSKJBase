<resources>

    <style name="k3dlibCommonTheme" parent="k3dlibBaseTheme">
        <item name="android:colorControlActivated">@color/k3dlibColorControlActivated</item>
        <item name="android:windowContentTransitions">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/k3dlibColorPrimary</item>
        <item name="android:navigationBarColor">@color/k3dlibColorPrimary</item>
        <!--<item name="android:stateListAnimator">@drawable/button_press_anim</item>-->

    </style>

    <style name="k3dlibTranslucentTheme" parent="k3dlibBaseTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/k3dlibColorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="k3dlibButtonStyle">
        <item name="android:stateListAnimator">@drawable/button_press_anim</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28pt</item>
        <item name="android:background">@null</item>
    </style>

    <style name="k3dlibButtonCancelStyle">
        <item name="android:stateListAnimator">@drawable/button_press_anim</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28pt</item>
        <item name="android:background">@null</item>
    </style>
</resources>
